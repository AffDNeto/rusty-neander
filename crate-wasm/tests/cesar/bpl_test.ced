; Testes BPL (N=0)
MOV #1 R0

; JUMP COM FLAG DESLIGADA
INC R0
SCC NZCV
CCC N
BPL NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BMI ERR ; se N=1
BNE ERR ; se Z=0
BVC ERR ; se V=0
BCC ERR ; se C=0

; JUMP COM FLAGS LIGADAS
INC R0
SCC NZCV
BPL  ERR

; Testa se alguma flag foi modificada
BEQ ERR ; se Z=0
BVC ERR ; se V=0
BCC ERR ; se C=0
BMI END ; se N=1
JMP ERR

END:
MOV R0 T0
MOV #0 E
ERR:
HLT
ORG 1024
E: 1
T0: 0
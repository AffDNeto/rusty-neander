; Testes BCS (C=1)
MOV #1 R0

; JUMP COM FLAG LIGADAS
INC R0
CCC NZCV
SCC C
BCS NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BCC ERR ; se C=0
BVS ERR ; se V=1
BEQ ERR ; se Z=1
BMI ERR ; se N=1

; JUMP COM FLAGS DESLIGADAS
INC R0
CCC NZCV
BCS  ERR

; Testa se alguma flag foi modificada
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BVS ERR ; se V=1
BCC END ; se C=0
JMP ERR

END:
MOV R0 T0
MOV #0 E
ERR:
HLT
ORG 1024
E: 1
T0: 0
; Testes BLS (C=1 ou Z=1)
MOV #1 R0
CCC NV

; JUMP COM C=1 Z=0
INC R0
CCC Z
SCC C
BLS NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BVS ERR ; se V=1
BMIS ERR ; se N=1
BEQ ERR ; se Z=1
BCC ERR ; se C=0

; JUMP COM C=0 E Z=1
INC R0
SCC Z
CCC C
BLS NX2
JMP ERR

NX2:
; testa se alguma flag foi modificada
BMI ERR ; se N=1
BVS ERR ; se V=1
BCC ERR ; se C=0
BEQ ERR ; se Z=1

; JUMP COM C,Z=1
INC R0
SCC ZC
BLS NX3
JMP ERR

NX3:
; testa se alguma flag foi modificada
BVS ERR ; se V=1
BMI ERR ; se N=1
BCC ERR ; se C=0
BNE ERR ; se Z=0

; JUMP COM C,Z=0, NAO DEVE DESVIAR
INC R0
CCC CZ
BLS ERR

; testa se alguma flag foi modificada
BVS ERR ; se V=1
BMI ERR ; se N=1
BCS ERR ; se C=1
BEQ ERR ; se Z=1

END:
MOV R0 T0
MOV #0 E
ERR:
HLT
ORG 1024
E: 1
T0: 0
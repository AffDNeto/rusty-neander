; Testes INC
CCC NZVC
MOV #STACK R6 ; inicia pilha

; CASO SIMPLES
SCC NVC
CCC Z
MOV #0 R0
INC R0
BNE ERR
BMI ERR
BVS ERR
BCS ERR
CMP R0 #1
BNE ERR
MOV R0 -(R6)

; OVERFLOW E NEGATIVAÇÃO
CCC VN
SCC ZC
MOV MAXN R0
INC R0
BPL ERR
BVC ERR
BEQ ERR
BCS ERR
CMP R0 MINN
BNE ERR
MOV R0 -(R6)

; CARRY
CCC ZC
SCC NV
MOV MAX R0
INC R0
BNE ERR
BCC ERR
BVS ERR
BMI ERR
CMP R0 #0
BNE ERR
MOV R0 -(R6)

; MODOS DE ENDERECAMENTO
;PRE DEC
MOV #T R0
INC -(R0)   ; escreve em T_PRE_DEC
;POS INC
INC #0   ; mesmo que INC (R7)+
;INDIRETO
MOV #T R0
INC (R0)    ; escreve em T
;INDEXADO
INC 2(R0)   ; escreve em T_IDX
;IND POS INC
MOV #TI_POS_INC R0
INC ((R0)+)
;IND PRE DEC
MOV #TI_IDX R0
INC (-(R0)) ; escreve em TI_PRE_DEC
;IND INDEXADO
INC 2(R0)   ; escreve em TI_IDX

JMP END
ERR:
MOV #1 E
END:
HLT

ORG 1024
E: 0
MAX: HFFFF
MAXN: H7FFF
MINN: H8000
T_PRE_DEC: 1
T: 2
T_IDX:3
TI_POS_INC: 5
TI_PRE_DEC:6
TI_IDX: 7

; Testes DEC
CCC NZVC
MOV #STACK R6 ; inicia pilha

; CASO SIMPLES
MOV #1 R0
SCC NVC
CCC Z
DEC R0
BNE ERR
BMI ERR
BVS ERR
BCS ERR
CMP R0 #0
BNE ERR
MOV R0 -(R6)

; Borrow-out
MOV #0 R0
CCC NC
SCC ZV
DEC R0
BPL ERR
BVS ERR
BEQ ERR
BCC ERR ; Borrow-out 
CMP R0 MAX
BNE ERR
MOV R0 -(R6)

; OVERFLOW
MOV MINN R0
CCC V
SCC NCZ
DEC R0
BEQ ERR
BCS ERR
BVC ERR
BMI ERR
CMP R0 MAXN
BNE ERR
MOV R0 -(R6)

; MODOS DE ENDERECAMENTO
;PRE DEC
MOV #T R0
DEC -(R0)   ; escreve em T_PRE_DEC
;POS INC
DEC #0   ; mesmo que DEC (R7)+
;INDIRETO
MOV #T R0
DEC (R0)    ; escreve em T
;INDEXADO
DEC 2(R0)   ; escreve em T_IDX
;IND POS INC
MOV #TI_POS_INC R0
DEC ((R0)+)
;IND PRE DEC
MOV #TI_IDX R0
DEC (-(R0)) ; escreve em TI_PRE_DEC
;IND INDEXADO
DEC 2(R0)   ; escreve em TI_IDX

JMP END
ERR:
MOV #1 E
END:
HLT

ORG 1024
STACK: 0
E: 0
MAX: HFFFF
MAXN: H7FFF
MINN: H8000
T_PRE_DEC: 1
T: 2
T_IDX:3
TI_POS_INC: 5
TI_PRE_DEC:6
TI_IDX: 7

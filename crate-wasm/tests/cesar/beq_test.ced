; Testes BNE (Z=1)
MOV #1 R0

; JUMP COM FLAG LIGADAS
INC R0
CCC NZCV
SCC Z
BEQ NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BNE ERR ; se Z=0
BMI ERR ; se N=1
BVS ERR ; se V=1
BCS ERR ; se C=1

; JUMP COM FLAGS DESLIGADAS
INC R0
CCC NZCV
BEQ  ERR

; Testa se alguma flag foi modificada
BMI ERR ; se N=1
BVS ERR ; se V=1
BCS ERR ; se C=1
BNE END ; se Z=0
JMP ERR

END:
MOV R0 T0
MOV #0 E
ERR:
HLT
ORG 1024
E: 1
T0: 0
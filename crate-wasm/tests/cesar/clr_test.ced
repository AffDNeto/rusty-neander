; Testes CLR
; ZERA FLAGS
CCC ZNCV
MOV #0 R0

JMP START
JMP_ERR:
JMP ERR
START:
;TESTA FLAGS
INC R0
SCC N 
CLR R1
BNE JMP_ERR ; Z=1
BMI JMP_ERR ; N=0
BVS JMP_ERR
BCS JMP_ERR

; REGISTRADORES
INC R0
MOV R0 COUNTER ; SALVA O CONTADOR DE TESTE
CLR R0
CMP #0 R0
BNE JMP_ERR
MOV COUNTER R0

INC R0
CLR R1
CMP #0 R1
BNE ERR

INC R0
CLR R2
CMP #0 R2
BNE ERR

INC R0
CLR R3
CMP #0 R3
BNE ERR

INC R0
CLR R4
CMP #0 R4
BNE ERR

INC R0
CLR R5
CMP #0 R5
BNE ERR

INC R0
CLR R6
CMP #0 R6
BNE ERR

; MODOS DE ENDERECAMENTO
;PRE DEC
MOV #T R0
CLR -(R0)   ; escreve em T_PRE_DEC
;POS INC
CLR #0   ; mesmo que INC (R7)+
;INDIRETO
MOV #T R0
CLR (R0)    ; escreve em T
;INDEXADO
CLR 2(R0)   ; escreve em T_IDX
;IND POS INC
MOV #TI_POS_INC TMP
MOV #TMP R0
CLR ((R0)+)
;IND PRE DEC
MOV #TI_PRE_DEC TMP
MOV #TMP R0
INC R0
INC R0
CLR (-(R0)) ; escreve em TI_PRE_DEC
;IND INDEXADO
MOV #TI_IDX TMP
MOV #TMP R0
INC R0
INC R0
CLR (-2(R0))   ; escreve em TI_IDX

JMP END
ERR:
MOV #1 E
END:
MOV R0 COUNTER
HLT

ORG 1024
E: 0
COUNTER: 0
T_PRE_DEC: 1
T: 2
T_IDX:3
TI_POS_INC: 5
TI_PRE_DEC:6
TI_IDX: 7
TMP: 8
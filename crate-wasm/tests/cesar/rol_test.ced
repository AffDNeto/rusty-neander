; Testes ROL
CLR R0
CCC ZNCV
MOV #STACK R6

; TESTA CARRY
INC R0
MOV #H4000 R1 ; 0100 0000
CCC C
ROL R1  ; 0x4000<< = 0x8000 COM C=0
BCS ERR
BEQ ERR
BPL ERR
MOV R1 -(R6)

ROL R1  ; 0x8000<< = 0 COM C=1
BCC ERR
BNE ERR
BMI ERR
MOV R1 -(R6)

INC R0
ROL R1  ; 0<< + C=1 = 1
BMI ERR
BCS ERR
BEQ ERR
MOV R1 -(R6)

; TESTA OVERFLOW (XOR ENTRE CARRY E LSB)
INC R0
MOV #H8000 R1
SCC C
ROL R1  ; 1 XOR 1 = 0
BVS ERR
MOV R1 -(R6)

INC R0
CCC C
ROL R1  ; 0 XOR 0 = 0
BVS ERR
MOV R1 -(R6)

INC R0
MOV #H8000 R1
CCC C
ROL R1  ; 0 XOR 1 = 1
BVC ERR
MOV R1 -(R6)

; FULL CYCLE
INC R0
MOV #17 R2
MOV MAX R1
CCC C
LOOP:
ROL R1
MOV R1 -(R6)
SOB R2,LOOP


; MODOS DE ENDERECAMENTO
;PRE DEC
MOV #T R0
ROL -(R0)   ; escreve em T_PRE_DEC
;POS INC
ROL #0   ; mesmo que INC (R7)+
;INDIRETO
MOV #T R0
ROL (R0)    ; escreve em T
;INDEXADO
ROL 2(R0)   ; escreve em T_IDX
;IND POS INC
MOV #TI_POS_INC TMP
MOV #TMP R0
ROL ((R0)+)
;IND PRE DEC
MOV #TI_PRE_DEC TMP
ROL (-(R0)) ; escreve em TI_PRE_DEC
;IND INDEXADO
MOV #TI_IDX R0
INC R0
INC R0
ROL (-2(R0))   ; escreve em TI_IDX


JMP END
ERR:
MOV #1 E
END:
MOV R0 COUNTER
HLT

ORG 1024
STACK:5
E: 0
COUNTER: 0
FALSE: H0000
TRUE: HFFFF
A: HF0F0
NEG_A: H0F0F
T_PRE_DEC: 1
T: 2
T_IDX:3
TI_POS_INC: 5
TI_PRE_DEC:6
TI_IDX: 7
TMP: 8
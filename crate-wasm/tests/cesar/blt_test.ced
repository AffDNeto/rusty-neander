; Testes BLT (N<>V)
MOV #1 R0

; JUMP COM N=1 V=0
INC R0
CCC VZC
SCC N
BLT NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVS ERR ; se V=1
BPL ERR ; se N=0

; JUMP COM N=0 E V=1
INC R0
SCC V
CCC NZC
BLT NX2
JMP ERR

NX2:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVC ERR ; se V=0
BMI ERR ; se N=1

; JUMP COM N,V=1, NAO DEVE DESVIAR
INC R0
SCC NV
BLT ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BPL ERR ; se N=0
BVC ERR ; se V=0

; JUMP COM N,V=0, NAO DEVE DESVIAR
INC R0
CCC VN
BLT  ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BVS ERR ; se V=1

END:
MOV #0 E
ERR:
MOV R0 T0
HLT
ORG 1024
E: 1
T0: 0
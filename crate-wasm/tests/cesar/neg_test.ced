; Testes NEG
CLR R0
CCC ZNCV

JMP START
JMP_ERR:
JMP ERR
START:
; NEG 0 = 0 COM CARRY DESLIGADO ( CARRY SEGUE A LOGICA DE BORROW COM NEG )
INC R0
MOV #0 R1 
SCC CNV
CCC Z
NEG R1
BCS JMP_ERR
BVS JMP_ERR
BNE JMP_ERR
BMI JMP_ERR
CMP R1 #0
BNE JMP_ERR

; NEG 32768 = 32768(MENOR NUMERO NEGATIVO REPRESENTAVEL) COM OVERFLOW ATIVO
INC R0
MOV MINN R1
SCC Z
CCC VCN
NEG R1
BCC ERR
BVC ERR
BPL ERR
BEQ ERR
CMP R1 MINN
BNE ERR

; NEG NEG 1 = 1
INC R0
MOV #1 R1
CCC NC
SCC VZ
NEG R1
BPL ERR
BCC ERR
BVS ERR
BEQ ERR
CMP R1 #-1
BNE ERR
NEG R1
BMI ERR
BCC ERR
BVS ERR
BEQ ERR
CMP R1 #1
BNE ERR


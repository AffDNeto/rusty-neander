; Testes BCC (C=0)
MOV #1 R0

; JUMP COM FLAG DESLIGADA
INC R0
SCC NZCV
CCC C
BCC NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BPL ERR ; se N=0
BNE ERR ; se Z=0
BVC ERR ; se V=0

; JUMP COM FLAGS LIGADAS
INC R0
SCC NZCV
BCC  ERR

; Testa se alguma flag foi modificada
BEQ ERR ; se Z=0
BPL ERR ; se N=0
BVC ERR ; se V=0
BCS END ; se C=1
JMP ERR

END:
MOV R0 T0
MOV #0 E
ERR:
HLT
ORG 1024
E: 1
T0: 0
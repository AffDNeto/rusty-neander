; Testes BLE (N<>V ou Z=1)
MOV #1 R0
CCC C

; JUMP COM N=1 V,Z=0
INC R0
CCC VZ
SCC N
BLE NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVS ERR ; se V=1
BPL ERR ; se N=0

; JUMP COM N,Z=0 E V=1
INC R0
SCC V
CCC NZ
BLE NX2
JMP ERR

NX2:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVC ERR ; se V=0
BMI ERR ; se N=1

; JUMP COM N,V=0 E Z=1
INC R0
CCC VN
SCC Z
BLE NX3
JMP ERR

NX3:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BNE ERR ; se Z=0
BVS ERR ; se V=1
BMI ERR ; se N=1

; JUMP COM N=0 E Z,V=1
INC R0
CCC N
SCC ZV
BLE NX4
JMP ERR

NX4:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BNE ERR ; se Z=0
BVC ERR ; se V=0
BMI ERR ; se N=1

; JUMP COM N,V=1 E Z=0, NAO DEVE DESVIAR
INC R0
SCC NV
CCC Z
BLE ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BPL ERR ; se N=0
BVC ERR ; se V=0

; JUMP COM N,V,Z=0, NAO DEVE DESVIAR
INC R0
CCC VNZ
BLE  ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BVS ERR ; se V=1

END:
MOV #0 E
ERR:
MOV R0 T0
HLT
ORG 1024
E: 1
T0: 0
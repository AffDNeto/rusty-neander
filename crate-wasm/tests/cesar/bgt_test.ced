; Testes BGT (N=V e Z=0)
MOV #1 R0

; JUMP COM N,V,Z=0
INC R0
CCC ZNVC
BGT NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVS ERR ; se V=1
BMI ERR ; se N=1

; JUMP COM N,V=1 E Z=0
INC R0
SCC NV
CCC ZC
BGT NX2
JMP ERR

NX2:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVC ERR ; se V=0
BPL ERR ; se N=0

; JUMP COM N=1 E V=0 E Z=0, NAO DEVE DESVIAR
INC R0
SCC N
CCC VZC
BGT  ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BPL ERR ; se N=0
BVS ERR ; se V=1

; JUMP COM N=0 E V=1 E Z=0, NAO DEVE DESVIAR
INC R0
SCC V
CCC NZC
BGT  ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BVC ERR ; se V=0

; JUMP COM N,V=0 E Z=1, NAO DEVE DESVIAR
INC R0
CCC NVC
SCC Z
BGT ERR

; testa se alguma flag foi modificada
BCS ERR ; se C=1
BNE ERR ; se Z=0
BVS ERR ; se V=1
BMI ERR ; se N=1

; JUMP COM N,V,Z=1, NAO DEVE DESVIAR
INC R0
CCC C
SCC NVZ
BGT ERR

; testa se alguma flag foi modificada
BCS ERR ; se C=1
BNE ERR ; se Z=0
BVC ERR ; se V=0
BPL ERR ; se N=0

END:
MOV #0 E
ERR:
MOV R0 T0
HLT
ORG 1024
E: 1
T0: 0
; Testes BHI (C=0 e Z=0)
MOV #1 R0

; JUMP COM C,Z=0
INC R0
CCC ZCNV
BHI NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BVS ERR ; se V=1
BMI ERR ; se N=1

; JUMP COM C=1 E Z=0, NAO DEVE DESVIAR
INC R0
SCC C
CCC ZNV
BHI  ERR

; Testa se alguma flag foi modificada
BCC ERR ; se C=0
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BVS ERR ; se V=1

; JUMP COM C=0 E Z=1, NAO DEVE DESVIAR
INC R0
SCC Z
CCC CNV
BHI  ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BNE ERR ; se Z=0
BMI ERR ; se N=1
BVS ERR ; se V=1

; JUMP COM C,Z=1, NAO DEVE DESVIAR
INC R0
SCC ZC
CCC VN
BHI ERR

; testa se alguma flag foi modificada
BCC ERR ; se C=0
BNE ERR ; se Z=0
BVS ERR ; se V=1
BMI ERR ; se N=1

END:
MOV #0 E
ERR:
MOV R0 T0
HLT
ORG 1024
E: 1
T0: 0
; Testes BVS (V=1)
MOV #1 R0

; JUMP COM FLAG LIGADAS
INC R0
CCC NZCV
SCC V
BVS NX1
JMP ERR

NX1:
; testa se alguma flag foi modificada
BVC ERR ; se V=0
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BCS ERR ; se C=1

; JUMP COM FLAGS DESLIGADAS
INC R0
CCC NZCV
BVS  ERR

; Testa se alguma flag foi modificada
BCS ERR ; se C=1
BEQ ERR ; se Z=1
BMI ERR ; se N=1
BVC END ; se V=0
JMP ERR

END:
MOV R0 T0
MOV #0 E
ERR:
HLT
ORG 1024
E: 1
T0: 0
; Testa adicao ahmes
; reseta flags
LDR A ZERO
SHR A

; 2 - 1 = 1
LDR A TWO
SUB A ONE
STR A T0
JZ ERR
JN ERR  
JC N1
JMP ERR 

N1: ;128 - 1 = 127 overflow (n√£o representado no ramses)
LDR A MINN
SUB A ONE
STR A T1
JZ ERR
JN ERR
JC N2
JMP ERR

N2: ; 0 - 1 = 255 negativo + borrow
LDR A ZERO
SUB A ONE
STR A T2
JZ ERR
JC ERR
JN N3
JMP ERR

N3: ; modo indireto
LDR B #1
SUB B IDI,I ; deve apontar para TI
STR B T3

; modo indexado
LDR B #2
LDR X #1
SUB B IDI,X ; deve apontar para TX
STR B T4

; modo imediato
LDR B #3
SUB B #1
STR B T5

JMP END
ERR: 
LDR A ONE
STR A E
END:
HLT

ORG 128
TI: 1
TX: 1
IDI:128
T0: 50
T1: 50
T2: 50
T3: 50
T4: 50
T5: 50
ZERO: 0	
ONE: 1
TWO: 2
MAX: 255; Valor maximo em byte
MAXN:127; Valor maximo em complemento de 2
MINN:128; Valor minimo negativo em complemento de 2
E: 0    ; Variavel para indicar que teve um erro no teste
; Testa carga de registrador
; Nenhuma instrucao testada deve ser capa de modificar os sinais de flag
LDR A ZERO
ADD A ZERO

; carga simples
LDR A ONE
JZ ERR
JN ERR 	
JC ERR
STR A T0

; carga modifica a flag z
LDR A ZERO; AC = 0
JN ERR
JC ERR
JZ N1
JMP ERR
N1:
STR A T1

; carga modifica a flag n
LDR A MAX	; AC = 255(-1)
JZ ERR
JC ERR
JN N2
JMP ERR
N2:	
STR A T2

; carga indireta
LDR A TI,I
STR A T3

; carga indexada
LDR X ZERO
LDR A TI,X
STR A T4

; carga imediata 
LDR A #1
STR A T5

; carga no registrador correto
LDR A #1
LDR B #2
LDR X #3
STR A T6
STR A T7
STR A T8

END:    ; se lda n√£o funcionar a flag de erro continuara ativa
